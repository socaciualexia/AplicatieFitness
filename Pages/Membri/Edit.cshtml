@page
@model AplicatieFitness.Pages.Membri.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editează</h1>

<h4>Membru</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Membru.MembruId" />
            <div class="form-group">
                <label asp-for="Membru.Nume" class="control-label"></label>
                <input asp-for="Membru.Nume" class="form-control" />
                <span asp-validation-for="Membru.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membru.Email" class="control-label"></label>
                <input asp-for="Membru.Email" class="form-control" />
                <span asp-validation-for="Membru.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membru.Role" class="control-label"></label>
                <select asp-for="Membru.Role" class="form-control" asp-items="Model.RoleOptions"></select>
                <span asp-validation-for="Membru.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi la Lista Membrilor</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model AplicatieFitness.Pages.Membri.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Ștergere Membru</h1>

<h3>Sigur doriți să ștergeți Membrul?</h3>
<div>
    <h4>Membru</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membru.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membru.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membru.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membru.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membru.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membru.Role)
        </dd>

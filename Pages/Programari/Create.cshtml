@page
@model AplicatieFitness.Pages.Programari.CreateModel

<h1>Adaugă o Programare</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Programare.MembruID" class="control-label">Membru</label>
        <select asp-for="Programare.MembruID" class="form-control" asp-items="ViewBag.MembruID"></select>
        <span asp-validation-for="Programare.MembruID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Programare.SesiuneID" class="control-label">Sesiune</label>
        <select asp-for="Programare.SesiuneID" class="form-control" asp-items="ViewBag.SesiuneID"></select>
        <span asp-validation-for="Programare.SesiuneID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Programare.DataProgramare" class="control-label">Data și Ora</label>
        <input asp-for="Programare.DataProgramare" class="form-control" />
        <span asp-validation-for="Programare.DataProgramare" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Programare.Status" class="control-label">Status</label>
        <input asp-for="Programare.Status" class="form-control" />
        <span asp-validation-for="Programare.Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvează</button>
</form>
<a asp-page="./Index">Înapoi la Listă</a>
